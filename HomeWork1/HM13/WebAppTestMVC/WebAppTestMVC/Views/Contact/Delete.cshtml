@model WebAppTestMVC.Models.Contact

<div class="container shadow p-5">
    <div class="row pb-2">
        <h2>Delete Contact</h2>
    </div>

    <form method="post" asp-action="DeleteContact">
        <input asp-for="Id" type="hidden" />
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Name">Name</label>
                <input type="text" class="form-control mb-3" asp-for="Name" disabled />
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Phone">Phone</label>
                <input type="text" class="form-control mb-3" asp-for="Phone" disabled />
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="AdditionalPhone">Additional Phone</label>
                <input type="text" class="form-control mb-3" asp-for="AdditionalPhone" disabled />
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Email">Email</label>
                <input type="email" class="form-control mb-3" asp-for="Email" disabled />
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Description">Description</label>
            <textarea class="form-control mb-3" asp-for="Description" disabled></textarea>
        </div>

        <button type="submit" class="btn btn-lg btn-danger p-2">
            <i class="bi bi-trash-fill"></i> Delete
        </button>
        <a asp-action="Index" class="btn btn-lg btn-warning p-2">Back To List</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
